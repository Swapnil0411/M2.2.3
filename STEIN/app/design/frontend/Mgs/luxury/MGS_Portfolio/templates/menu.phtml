                <?php else: ?>
                    <li class=" item"><a href="<?php echo $_menu->getLinkCate(); ?>"><?php echo $_menu->getCategoryName() ?></a></li>
                    <?php endif ?>
                <?php endforeach; ?>
        </ul>

    </div>
</div>
<?php $menu = $this->getMenu() ?>
<div class="block portfolio-nav">
    <div class="title-block">
        <h4><?php echo __('Portfolio Categories') ?></h4>
    </div>
    <div class="block-content">

        <ul>
            <?php foreach ($menu as $_menu): ?>
                <?php if ($_menu->getId() == $this->getRequest()->getParam('id')): ?>
